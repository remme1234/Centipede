<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.example.notice.service.impl.NoticeMapper">
	
	<!-- boardVO resultMap 설정 -->
	<resultMap id="noticeList" type="egovframework.example.util.BoardVO">
	 	<result property="boardUid"		column="BOARD_UID"/>
	 	<result property="number"		column="NUMBER"/>
	 	<result property="title"		column="TITLE"/>
	 	<result property="contents"		column="CONTENTS"/>
	 	<result property="visitCnt"		column="VISIT_CNT"/>
	 	<result property="rsgstDt"		column="RSGST_DT"/>
	 	<result property="rsgstrId"		column="RSGSTR_ID"/>
	 	<result property="useYn"		column="USE_YN"/>
	 	<result property="fileNo"		column="FILE_NO"/>
	 	<result property="savedFileNm"	column="SAVED_FILE_NM"/>
	 	<result property="relDt"		column="REL_DT"/>
	</resultMap>
	
	
	<!-- 발매정보게시판 목록 불러오기 -->
	<select id="selectNoticeViewList" resultMap="noticeList">
		SELECT 	NUMBER
				,TITLE
				,CONTENTS
				,VISIT_CNT
				,RSGST_DT
				,RSGSTR_ID
				,USE_YN
		FROM 	T_NOTICE
		WHERE 	USE_YN='Y'
		ORDER BY RSGST_DT DESC
	</select>
	
	<!-- 조회수 증가 쿼리 -->
